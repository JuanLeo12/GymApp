<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/lstCodPro"
            android:layout_width="10dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="lstCodPro"
            android:textAlignment="textStart"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/lstNomPro"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="lstNomPro"
            android:textAlignment="textStart"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/lstPreComPro"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="lstPreComPro"
            android:textAlignment="textStart"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/lstPreVenPro"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="lstPreVenPro"
            android:textAlignment="textStart"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/lstCantPro"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="lstCantPro"
            android:textAlignment="textStart"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/lstEstPro"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="lstEstPro"
            android:textAlignment="textStart"
            android:textStyle="bold" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>