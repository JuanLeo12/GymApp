<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/lstCodMaq"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="lstCodMaq"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/lstNomMaq"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="lstNomMaq"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/lstPreComMaq"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="lstPreComMaq"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/lstCantMaq"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="lstCantMaq"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/lstEstMaq"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="lstEstMaq"
            android:textColor="@color/black"
            android:textStyle="bold" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>